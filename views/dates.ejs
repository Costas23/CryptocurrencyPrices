                      'rgba(255, 159, 64, 1)'
                  ],
                  borderWidth: 1
              }]
            },
              options: { maintainAspectRation:true,
                  scales: {
                      yAxes: [{
                          stacked: true,
                          ticks: {
                    // Abbreviate the millions
                    callback: function(value, index, values) {
                      if(value< 1000){
                        return value;
                      }else if(value>=1000 && value<1000000 ){
                        return value / 1e3 + 'K';
                      }else if(value>=1000000 && value<1000000000){
                        return value / 1e6 + 'M';
                      }else{
                        return value / 1e9 + 'B';
                      }
                    }
                }
